{% extends 'common/base.twig' %}

{% block title %}
  <title> Internal project </title>
{% endblock %}

{% block css %}
  <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
  <link rel="stylesheet" href="/css/main.css" >
{% endblock %}

{% block content %}
  <div class="login-form" >
    <form id="login-form" method="post" autocomplete="off" >
      <div class="form-row" >
        <label class="label" > Username </label>
        <input id="username" class="input-form" name="username" type="text" placeholder="Insert username here..." ></input>
      </div>

      <div class="form-row" >
        <label class="label" > Password </label>
        <input id="password" class="input-form" name="password" type="password" placeholder="Insert password here..." ></input>
      </div>

      <div class="form-row" >
        <button class="submit-form" > Login </button>
      </div>
    </form>
  </div>
{% endblock %}

{% block js %}
  <script src="/js/main.js" type="text/javascript" ></script>
{% endblock %}
